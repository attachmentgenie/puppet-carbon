[Unit]
Description=Graphite Carbon Relay
After=network.target

[Service]
Type=forking
StandardOutput=syslog
StandardError=syslog
ExecStart=/usr/bin/carbon-relay --config=<%= @config_dir %>/<%= @config_filename %> --pidfile=<%= @pid_dir %>/carbon-relay.pid --logdir=<%= @log_dir %>/ start
ExecReload=/bin/kill -USR1 $MAINPID
PIDFile=<%= @pid_dir %>/carbon-relay.pid

[Install]
WantedBy=multi-user.target